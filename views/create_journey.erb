<form action="/create_journey" method="post">
  <div> 
    <label for="journey_name">What will be the name of this journey?
      <input name="journey_name" value="<%= @journey_name %>">
    </label>
  </div>
  <div>    
    <label for="base_country">Which Country will you set out from?
      <input name="base_country" value="<%= @base_country %>">
    </label>
  </div>
  <div>
    <label for="base_city">Which City will you set out from?
      <input name="base_city" value="<%= @base_city %>">
    </label>
  </div>
  <button type="submit">Create New Journey</button>
</form>