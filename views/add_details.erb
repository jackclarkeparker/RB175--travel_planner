<h1>Information Concerning <%= @topic_of_detail.name %>...</h1>
<h5>(Information may be provided in Markdown format)</h5>
<form action="/journeys/<%= params[:journey_id] %>/add_details" method='post'>
  <h2>Details</h2>
  <textarea name="details" rows="12" cols="80"><%= @topic_of_detail.details %></textarea>
  <h2>Pros</h2>
  <textarea name="pros" rows="12" cols="80"><%= @topic_of_detail.pros %></textarea>
  <h2>Cons</h2>
  <textarea name="cons" rows="12" cols="80"><%= @topic_of_detail.cons %></textarea>
  <button type="submit">Save Changes</button>
</form>

